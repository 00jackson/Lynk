generator client {
  provider = "prisma-client-js"
  output   = "./client" // âœ… fixed here!
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String
  role      String
  skills    String[]
  createdAt DateTime @default(now())

  projects    Project[]
  HelpRequest HelpRequest[]
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String
  techStack   String[]
  link        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Extended project form fields
  folder        String?
  startDate     DateTime?
  endDate       DateTime?
  notes         String?
  baseRate      String?
  minBudget     String?
  maxBudget     String?
  showToEditors Boolean? @default(false)
  showToClient  Boolean? @default(false)
  autoReset     Boolean? @default(false)
  sendAlerts    Boolean? @default(false)

  userProfile UserProfile @relation(fields: [userId], references: [userId], onDelete: Cascade)
}

model HelpRequest {
  id        String   @id @default(cuid())
  userId    String
  message   String
  status    String   @default("pending")
  coachId   String?  // Nullable until assigned
  createdAt DateTime @default(now())

  userProfile UserProfile @relation(fields: [userId], references: [userId], onDelete: Cascade)
}
